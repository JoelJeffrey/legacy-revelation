<div class="modal-wrap element3 is-hidden">
	<div class="modal-inner">
		<h1>{{title}}</h1>
		<a href="/" class="btn btn-close"><img src="../images/close.png"></a>
		<div class="modal-content">
			<div class="character-image">
				<img src="/images/characters/{{img}}">
				<a href="{{characterSheet}}" target="_blank" class="download-link">Character Sheet</a>
				<a href="{{journalLink}}" target="_blank" class="download-link">Journal</a>
			</div>
			<div class="character-description">
				<h4>Description:</h4>
				<p>{{journal}}</p>
				<p>{{journal2}}</p>
				<p>{{journal3}}</p>
			</div>
		</div>
	</div>
</div>
